extends base
block content
    form(method="POST")
        input.friend-email(placeholder="Enter userEmail",name="useremail", type="email")
        input(type="submit",value="Search")
        hr
        if foundUser
            div.friend-componet
                img.friend-avatar(src=foundUser.avatarUrl crossorigin="anonymous")
                span.friend-name #{foundUser.username}
                button.friend-plus 
                    i.fas.fa-plus
    if errorMessage
        span=errorMessage
block scripts
    if foundUser
        script(src="/static/js/friendPlus.js") 