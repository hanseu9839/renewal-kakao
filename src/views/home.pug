extends base
include mixins/friend
block content
    header.screen-header 
        h1.screen-header__title Friends 
        div.screen-header__icons
            a(href="/search") 
                i.fas.fa-search
            a(href="/users/edit")
                i.fas.fa-bars
    main.main-screen 
        div.user-component
            div.user-component__column 
                img(src=loggedInUser.avatarUrl, crossorigin="anonymous").user-component__avatar.user--component__avatar--xl
                div.user-component__text
                    h4.user-component__title  #{loggedInUser.username}
                    span.stateMessage #{loggedInUser.stateMessage}
            div.user-component-column
        div.friends-screen__channel
            div.freiends-screen__channel-header
                span Channel
                i.fas.fa-chevron-up
        each friend in friends 
            +friend(friend)