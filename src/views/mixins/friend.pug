mixin friend(friend)
    a(href=`/chat/${loggedInUser._id}/${friend._id}`)
        div.user-component
                div.user-component__column
                    img(crossorigin="anonymous" src=friend.avatarUrl).user-component__avatar.user--component__avatar--xl
                    div.user-component__text
                        h4.user-component__title #{friend.username}
                        span.stateMessage #{friend.stateMessage}
                div.user-component-column
        hr