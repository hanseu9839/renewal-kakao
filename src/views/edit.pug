extends base 
block content 
    form#edit-profile__form(method="POST")
        label(for="avatar") Avatar
        input(type="file",id="avatar", name="avatar", accept="image/*")
        input(placeholder="State Message",name="stateMessage",type="text")
        input(placeholder="Name", name="name", type="text", value=loggedInUser.name)
        input(placeholder="Useremail", name="email",type="email",value=loggedInUser.email)
        input(type="submit", value="Update Profile")